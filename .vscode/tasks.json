{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "../",
                "-G",
                "MinGW Makefiles"
            ],
            "options": {
                "cwd": "build"
            },
            "group": {
                "kind": "build",
            }
        },
        {
            "label": "Build (MinGW)",
            "type": "process",
            "command": "mingw32-make.exe",
            "options": {
                "cwd": "build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}